{% extends "sil18VitrineBundle::layout.html.twig" %}
{% block content %}
    <table class='table table-hover'>
        <tr>
            <th>Name</th>
            <th>Prix</th>
            <th>Stocks</th>
            <th>Ajouter</th>
        </tr>
    {% for article in articles %}
        <tr>
            <td>{{ article.name }}</td>
            <td>{{ article.price }}</td>
            <td>{{ article.stock }}</td>
            <td><a href="{{ path('ajoutArticle',{'id':article.id}) }}">Ajout</a></td>
        </tr>
    {% endfor %}
    </table>
{% endblock %}
